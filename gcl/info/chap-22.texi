@ref{pprint-fill}
,
@ref{pprint-logical-block}
,
@ref{pprint-pop}
,
@ref{write}
,
@b{*print-readably*},
@b{*print-escape*},
@b{*print-pretty*},
@b{*print-length*},
@ref{Default Print-Object Methods},

@ref{Printing Structures},

@ref{Pretty Print Dispatch Tables},
