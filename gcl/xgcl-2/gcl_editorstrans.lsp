    (DOLIST (ITEM ITEMS)
      (SETQ WID
            (IF WID (MAX WID (CAR (MENU-ITEM-PRINT-SIZE ITEM W)))
                (CAR (MENU-ITEM-PRINT-SIZE ITEM W)))))
    (LIST WID 11)))
