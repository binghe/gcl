(DEFUN MENU-ITEM-PRINT-SIZE (ITEM W)
  (LET (SIZ)
    (IF (ATOM ITEM) (LIST (WINDOW-STRING-WIDTH W ITEM) 11)
        (IF (STRINGP (CAR ITEM))
            (LIST (WINDOW-STRING-WIDTH W (CAR ITEM)) 11)
            (IF (AND (SYMBOLP (CAR ITEM))
                     (SETQ SIZ (GET (CAR ITEM) 'DISPLAY-SIZE)))
                SIZ (COPY-LIST '(50 11)))))))
